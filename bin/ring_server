#!/usr/bin/env ruby

require 'rubygems'
require 'daemons'
require 'rinda/ring'
require 'rinda/tuplespace'
require 'fileutils'
require 'optparse'
require 'optparse/time'
require 'ostruct'

options = OpenStruct.new
opts = OptionParser.new do |opts|
				  opts.banner = <<-BANNER
					Usage: ring_server <command>
					Available commands are:
					  - start
					  - stop
					  - restart

					BANNER
end
opts.parse!(ARGV)

FileUtils.mkdir_p(File.join("tmp", "pids"))

Daemons.run_proc('ring_server', { :dir_mode => :normal, :dir => File.join("tmp", "pids"), :monitor => true, :multiple => false }) do
	puts 'Starting ring_server...'
	DRb.start_service
	Rinda::RingServer.new(Rinda::TupleSpace.new)
	DRb.thread.join
end
